<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/relatorio_background"
        android:padding="16dp"
        android:id="@+id/llVisible"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/txtRelatorioTipo"
                android:text="@string/p"
                android:textColor="@color/myBlue"
                android:textStyle="bold"
                android:background="@drawable/rounded_view35"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lines="5"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:text="@string/obs"
                android:id="@+id/txtRelatObs"/>

        <TextView
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="end"
                android:layout_gravity="center"
                android:text="@string/emissao"
                android:id="@+id/txtRelatCreated"/>
    </LinearLayout>

<LinearLayout
        android:id="@+id/llPop"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TextView
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contato"
                android:id="@+id/txtRelatContato"/>

        <TextView
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtRelatCargo"
        />
    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:drawableStart="@drawable/checked"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:text="@string/presencial"
                android:theme="@style/WhiteBack"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:id="@+id/txtRelatPresencial"/>

        <TextView
                android:drawableStart="@drawable/checked"
                android:layout_weight="1"
                android:theme="@style/WhiteBack"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:text="@string/cadastro"
                android:id="@+id/txtRelatCadastro"
                android:layout_width="match_parent"
                android:layout_height="22dp"/>



    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:drawableStart="@drawable/checked"
                android:layout_weight="1"
                android:theme="@style/WhiteBack"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:text="@string/nao_atende"
                android:id="@+id/txtRelatNaoAtende"
                android:layout_width="match_parent"
                android:layout_height="22dp"/>

        <TextView
                android:drawableStart="@drawable/checked"
                android:layout_weight="1"
                android:id="@+id/txtRelatRestricao"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:theme="@style/WhiteBack"
                android:text="@string/restricao"
                android:layout_width="match_parent"
                android:layout_height="22dp"/>
    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <TextView
                android:drawableStart="@drawable/checked"
                android:layout_weight="1"
                android:theme="@style/WhiteBack"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:text="@string/sem_interesse"
                android:id="@+id/txtRelatSemInteresse"
                android:layout_width="match_parent"
                android:layout_height="22dp"/>

        <TextView
                android:drawableStart="@drawable/checked"
                android:layout_weight="1"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:theme="@style/WhiteBack"
                android:id="@+id/txtRelatReagendar"
                android:text="@string/reagendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/proxima_visita"/>

        <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/txtRelatVisita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
    </LinearLayout>



</LinearLayout>
</LinearLayout>